#!/bin/bash
# Push into gh-pages the updated library from master
set -e
FOLDER=.gh-pages

if [ ! -d .gh-pages ]; then
  git clone -b gh-pages git@github.com:icoloma/koliseo-agenda.git ${FOLDER}
else
  cd ${FOLDER}
  git pull
  cd ..
fi
cp build/* ${FOLDER}/js/
cd ${FOLDER}
git add .
git commit -m "${1:Update library}"
git push
cd ..
