{
  "name": "koliseo-agenda",
  "version": "0.1.0",
  "description": "Display the Koliseo Agenda for an event",
  "main": "build/koliseo-agenda.min.js",
  "jsnext:main": "src/main.js",
  "dependencies": {
    "alt-ng": "^0.1.0",
    "es6-promise": "^4.1.0",
    "lodash": "^4.17.4",
    "marked": "^0.3.6",
    "preact": "^8.1.0",
    "preact-compat": "^3.16.0",
    "prop-types": "^15.5.8",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "babel-loader": "^7.0.0",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-plugin-module-resolver": "^2.7.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.18.0",
    "coveralls": "^2.11.16",
    "enzyme": "^2.6.0",
    "jsdom": "^9.9.1",
    "jsdom-global": "^2.1.0",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.2",
    "nyc": "^10.1.2",
    "prop-types": "^15.5.9",
    "react": "^15.4.1",
    "react-addons-test-utils": "^15.4.1",
    "react-dom": "^15.4.1",
    "sinon": "^1.17.7",
    "webpack": "^2.5.1",
    "webpack-bundle-analyzer": "^2.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/koliseoapi/koliseo-agenda.git"
  },
  "authors": [
    "Carlos Coloma <ccescribano@gmail.com>",
    "Nacho Coloma <icoloma@gmail.com>"
  ],
  "license": "Apache-2.0",
  "keywords": [
    "koliseo"
  ],
  "scripts": {
    "postversion": "git push && git push --tags",
    "coverage": "NODE_ENV=test node_modules/.bin/nyc --reporter=lcov --reporter=text node_modules/.bin/_mocha --compilers js:babel-register test/*.js",
    "watch:js": "NODE_ENV=development node_modules/.bin/webpack --watch --config webpack.config.js",
    "watch:css": "while inotifywait -e modify,create,delete -r src/main/scss/; do node_modules/.bin/node-sass scss/main.scss build/koliseo-agenda.css --output-style compressed; done",
    "build": "NODE_ENV=production node_modules/.bin/webpack --config webpack.config.js --optimize-minimize && node_modules/.bin/node-sass scss/main.scss build/koliseo-agenda.css --output-style compressed",
    "stats": "NODE_ENV=development node_modules/.bin/webpack --config webpack.config.js --env.stats",
    "test": "./node_modules/mocha/bin/mocha --compilers js:babel-register --require .vscode/registerBabel.js test/*Test.js"
  }
}
